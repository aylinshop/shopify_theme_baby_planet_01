<div data-section-id="{{ section.id }}"  data-section-type="client section" class="client-section">
 {% if section.blocks.size > 0 %}    
  <div class="grid-uniform section-seven">
    <div class="container">
      <div class="grid__item">
         <div class="border-title">
        {% if section.settings.title != blank %}
        <h2 style="color:{{ section.settings.title_color }};">{{ section.settings.title }}</h2>
        {% endif %}
        </div>
        <div id="client-car" class="client-section owl-carousel owl-theme">
          {% for block in section.blocks %}
          {% if block.settings.client_img != blank %}
          <div class="item">
            <a href="{{ block.settings.client_link }}"> <img src="{{ block.settings.client_img | img_url: "master"  }}" alt="{{ block.settings.client_heading }}" /></a>
          </div>
          {% else %}          
          <div class="item"><a href="#">{{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}</a></div>
           {% endif %}           
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
  <div class="dt-sc-hr-invisible-large"></div>
  {% endif %} 
</div>

