<div data-section-id="{{ section.id }}"  data-section-type="home-product-grid-type-17"> 
  <div class="home-product-grid-type-17">
    <div class="container">
       
      
      
      {% if section.settings.main_title != blank or section.settings.description_1 != blank    %}
        <div class="section-header section-header--small">
          <div class="border-title wow fadeInDown animated">            
            <h2 style="اللون:{{ section.settingsf.main_title_clr }};">{{ section.settings.main_title }}</h2>      
            {% if section.settings.description_1 != blank %} <h5 class="small-title" style="color:{{ section.settings.desc_color }}">{{ section.settings.description_1 }}</h5>{% endif %}        
          </div>

        </div>              
        {% endif %} 

      
    {% if section.blocks.size > 0 %} 
    {% for block in section.blocks %}   
      {%- assign collection = collections[block.settings.collection] -%}
    <div class="grid-uniform full_width_tab">     
      {% if block.settings.align_text == 'left' %}
      <div class="grid__item wide--one-half post-large--one-half medium--grid__item small--grid__item" style="float:left;">
        {% if block.settings.image != blank %}
     <a class="collection_img" href="{{ collection.url }}">
        <img src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.title }}" />
        </a>
        {% else %}
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          {% endif%}
        <div class="collection_cnt">
           {% if block.settings.letter != blank %}
      <span class="img_font">{{ block.settings.letter }}</span>
      {% endif %}
       {% if block.settings.title != blank %}
      <h2 class="section-header__title">{{ block.settings.title }}</h2>
      {% endif %} 
        {% if block.settings.btn != blank %}
        <a class="btn" href="{{ collection.url }}">
        {{ block.settings.btn }}
          
        </a>
        {% endif %}
        </div>
      </div>
      {% endif %}
      <div class=" {% if block.settings.align_text == 'none' %} grid__item {% else %} grid__item wide--one-half post-large--one-half medium--grid__item small--grid__item {% endif %}">   
        <ul class="{{ block.settings.title | handle }}-{{ section.id }} owl-carousel owl-theme">
          {% for product in collection.products %}
          {% include 'carousel-grid-item' %}  
          {% else %}
            {% for i in (1..2) %}
        <li class="grid__item item-row {{ grid_item_width }} on-sale" id="product-{{ i }}">
          <div class="products   wow fadeIn   animated" style="visibility: visible;">
            <div class="product-container">
              <a href="#" class="grid-link"> 
                {% if forloop.index == 3 %}
                <div class="featured-tag">
                  <span class="badge badge--sale">
                    <span class="gift-tag badge__text{% if sale_text.size > 7 %} badge__text--small{% endif %}">{{ 'products.product.sale' | t }}</span>
                  </span>
                </div>{% endif %}

                <div class="reveal"> 
                  {% capture current %}{% cycle 1, 2, 3, 4, 5, 6 %}{% endcapture %}
                  {{ 'product-' | append: current | placeholder_svg_tag: 'placeholder-svg' }} 
                </div>
              </a>
              <div class="ImageWrapper">
                <div class="product-button">
                  <div class="button-row-1">
                  <a href="#" class="quick-view-text"> 
                  <i class="zmdi zmdi-eye"></i>
                  </a>
                    <a href="{{ product.url }}">                      
           <i class="zmdi zmdi-link"></i>
          </a>  
                  </div>
                  <div class="button-row-2">
                  <form action="#" method="post" class="variants clearfix" id="cart-form-6529189125">
                <input type="hidden" name="id" value="21661289093">
                <a href="#" class="add-cart-btn"><i class="zmdi zmdi-shopping-cart"></i> </a>
              </form>
                  <a href="/account/login" class="wishlist"><i class="zmdi zmdi-favorite-outline"></i></a> 
                  
                  </div>
                  </div>
              </div>
            </div>
            <div class="product-detail"> 
            <a href="#" class="grid-link__title">Sample title {{ i }}</a>
            
                 <div class="grid-link__meta">
                <div class="product_price"> <span class="money" data-currency-usd="$320.00">$0.00</span> </div>
                <del class="grid-link__sale_price"><span class="money" data-currency-usd="$756.00">$0.00</span></del> </div>
              <span class="spr-badge" id="spr_badge_6529189125" data-rating="0.0"> 
                <span class="spr-starrating spr-badge-starrating"><i class="spr-icon spr-icon-star-empty" style="color: #f05315;"></i><i class="spr-icon spr-icon-star-empty" style="color: #f05315;"></i><i class="spr-icon spr-icon-star-empty" style="color: #f05315;"></i><i class="spr-icon spr-icon-star-empty" style="color: #f05315;"></i><i class="spr-icon spr-icon-star-empty" style="color: #f05315;"></i></span> <span class="spr-badge-caption"> </span> </span>
           
            </div>
          </div>
        </li>
        {% endfor %} 
          {% endfor %}
        </ul> 
        
         
        <div class="{{ block.settings.title | handle }}-{{ section.id }}-nav carousel-arrow">
          
          
          </div>
        <script type="text/javascript">
       jQuery(document).ready(function() {      
        var grid_type_17 = $(".{{ block.settings.title | handle }}-{{ section.id }}");
        jQuery(grid_type_17).owlCarousel({       
         items:2,
         loop:false,              
         dots: false,
         navContainer: ".{{ block.settings.title | handle }}-{{ section.id }}-nav",
         navText: ['<a class="prev btn active"><i class="icon-arrow-left"></i></a>','<a class="next btn"><i class="icon-arrow-right"></i></a>'],
         responsive:{
           0:{
             items: 2
           },
           600:{
             items:2
           },
              750:{
             items:2
           },                           
           1000:{
                                         items: {{ block.settings.products_per_column }}
           }
         }
      });      
  });
      
      
</script>
       
      </div>
      {% if block.settings.align_text == 'right' %}
      <div class="wide--one-half post-large--one-half medium--grid__item small--grid__item right-side" style="float:right;">
        {% if block.settings.image != blank %}
         <a class="collection_img" href="{{ collection.url }}">
      <img src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.title }}" />
        </a>
        {% else %}
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          {% endif%}
      <div class="collection_cnt">
         {% if block.settings.letter != blank %}
      <span class="img_font">{{ block.settings.letter }}</span>
      {% endif %}
       {% if block.settings.title != blank %}
      <h2 class="section-header__title">{{ block.settings.title }}</h2>
      {% endif %} 
        {% if block.settings.btn != blank %}
        <a class="btn" href="{{ collection.url }}">
        {{ block.settings.btn }}
          
        </a>
        {% endif %}
        </div> 
      </div>
      {% endif %}
    </div>
    
    {% endfor %}
    {% endif %}
    <div class="dt-sc-hr-invisible-large"></div>
  </div>  
</div>
</div>


<style>
    {% if section.settings.heading_image_need %}  .home-product-grid-type-17 .border-title:before {  content:"";background-image:url({{ section.settings.heading_image | img_url: 'medium' }});display:inline-block;background-repeat:no-repeat;background-position:center;width:69px;height:62px;} {% endif %}
</style>

{% schema %}
{
  "name": "Home Product Grid",
  "class": "index-section",
  "max_blocks": 2,
  "settings": [

{"type": "text",
"id": "main_title",
"label": "Heading",
"default": "New arrivals"
}, 
{
"type": "color",
"id": "main_title_clr",
"label": "Heading color",
"default": "#000"
}, 
{
"type": "textarea",
"id": "description_1",
"label": "Small Heading"
},
{
"type": "color",
"id": "desc_color",
"label": "Description color",
"default": "#000"
}, 

{
      "type": "checkbox",
      "id": "heading_image_need",
      "label": "Show Heading Image ?"
      
    },	
{
      "type": "image_picker",
      "id": "heading_image",
      "label": "Image",
	  "info": "Size: 69x62"
      
    }

],
  "blocks": [	
    {
      "type": "text_block",
      "name": "Column",
      "settings": [
{
      "type": "image_picker",
      "id": "image",
      "label": "Image"      
    },
{
      "type": "select",
      "id": "align_text",
      "label": "Image alignment",
      "default": "left",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "right",
          "label": "Right"
        },
{
          "value": "none",
          "label": "None"
        }
      ]
    },
{
        "type": "text",
        "id": "letter",
        "label": "Image Letter"
      },
       {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "New arrivals"
    },	
	{
      "type": "text",
      "id": "btn",
      "label": "Button"
      
    },	

    {
      "id": "collection",
      "type": "collection",
      "label": "Collection"
    },
{
"type": "select",
"id": "products_per_column",
"label": "Products per Column",
"default": "4",
"options": [

{
"value": "2",
"label": "2"
},
{
"value": "3",
"label": "3"
},
{
"value": "4",
"label": "4"
} 
]
}
	
    ]
    }
  ],
  "presets": [
    {
     "name": "Home Product Grid",
      "category": "Text",
      "blocks": [
        {
          "type": "text_block"
        }        
      ]
    }
  ]
}
{% endschema %}

