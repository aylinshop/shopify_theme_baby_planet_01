<div data-section-id="{{ section.id }}"  data-section-type="newsletter-block">  
<div class="newsletter-section" style="background:{{ section.settings.bg_color }};float:left;width:100%;">
  <div class="overlay"></div>
  <div class="container">
    {% if section.settings.title != blank or section.settings.text != blank  %}
    <div class="border-title">
      {% if section.settings.title != blank %}<h2 class="newslet_title" style="color:{{ section.settings.title_color }};">
      {{ section.settings.title }}
      </h2>{% endif %}
    
    {% if section.settings.text != blank %}
    <div class="short-desc">
      <p style="color:{{ section.settings.text_color }};"> {{ section.settings.text }}</p>
    </div>
    {% endif %}
      </div>
    {% endif %}
    {% if settings.newsletter_form_action != blank %}
  <form action="{{ settings.newsletter_form_action }}" method="post"  name="mc-embedded-subscribe-form" target="_blank" class="input-group mc-embedded-subscribe-form">
   
    <input type="email" value="{% if customer %}{{ customer.email }}{% endif %}" placeholder="{{ 'general.newsletter_form.newsletter_email' | t }}" name="EMAIL" class="mail" aria-label="{{ 'general.newsletter_form.newsletter_email' | t }}">
      <button type="submit" class="btn subscribe" name="subscribe" value=""> {{ section.settings.button }}</button>    
   
  </form>
{% else %}
    {% form 'customer', class: "input-group mc-embedded-subscribe-form" %}
      {% if form.posted_successfully? %}
        <p class="note form-success">{{ 'general.newsletter_form.mailing_list_success_message' | t }}</p>
		{% else %}
          <input type="email" value="{% if customer %}{{ customer.email }}{% endif %}" placeholder="{{ 'general.newsletter_form.newsletter_email' | t }}" name="contact[email]" class="mail" aria-label="{{ 'general.newsletter_form.newsletter_email' | t }}" >
          <input type="hidden" name="contact[tags]" value="newsletter">
            <button type="submit" class="btn subscribe" name="subscribe" value="">{{ section.settings.button }}</button>             
      {% endif %}
       {{ form.errors | default_errors }}
    {% endform %}  
{% endif %}
  </div>
</div>
  <style>
    .newsletter-section button.btn { color:{{ section.settings.button_txt_color }};background-color:{{ section.settings.button_bg_color }}; }
    .newsletter-section button.btn:hover { color:{{ section.settings.button_hover_txt_color }}; background-color:{{ section.settings.button_hover__bg_color }};}
    .newsletter-section input::-webkit-input-placeholder { background:transparent; color:{{ section.settings.input_text_color }};}
    .newsletter-section input:-moz-placeholder { background:transparent;color:{{ section.settings.input_text_color }};}
    .newsletter-section input::-moz-placeholder {  background:transparent;color:{{ section.settings.input_text_color }};}
    .newsletter-section input:-ms-input-placeholder {  background:transparent;color:{{ section.settings.input_text_color }};}
    .newsletter-section form input[type="email"] { background:{{ section.settings.input_bg_color }};color:{{ section.settings.input_text_color }};border:none; }
    .newsletter-section input:focus, .newsletter-section input:active { border:none;background:{{ section.settings.input_focus_bg_color }}; }

  </style>
</div>
<div class="dt-sc-hr-invisible-large"></div>


