<div data-section-id="{{ section.id }}" data-section-type="grid-banner-type-10" class="grid-banner-type-10">   
  <div class="container">
    <div class="grid-uniform featuredItems">  
      <div class="grid__item wide--three-tenths post-large--three-tenths large--three-tenths medium-down--grid__item small--grid__item small--text-center">
        <div class="ovrly31 overlay_1">
          {% if section.settings.link_1 != blank %}<a class="banner_half_img" href="{{ section.settings.link_1 }}">{% endif%}
          {% if section.settings.image_1 != blank %}
          <img src="{{ section.settings.image_1 | img_url: '1000x' }}" alt="{{ section.settings.title_1 }}" />
          <div class="ovrly"></div>
          {% else %}
          <img src="//via.placeholder.com/800x1280">
          {% endif%}           
          {% if section.settings.link_1 != blank %}  </a>

          {% endif%}
          
        </div>
      </div>   
       <div class="grid__item wide--seven-tenths post-large--seven-tenths large--seven-tenths medium-down--grid__item small--grid__item small--text-center">
        <div class="middle-top">  
          <div class="ovrly31 overlay_3">
            {% if section.settings.link_3 != blank %}<a class="banner_half_img" href="{{ section.settings.link_3 }}">{% endif%}
            {% if section.settings.image_3 != blank %}
            <img src="{{ section.settings.image_3 | img_url: '1000x' }}" alt="{{ section.settings.title_3 }}" />
            <div class="ovrly"></div>
            
            <div class="featured-content">       
        {% if section.settings.title_3 != blank %}
        <h6 style="color:{{ section.settings.title_1_color }}">{{ section.settings.title_3 }}</h6>
        {% endif %}
        {% if section.settings.text_1 != blank %}
        <h2 style="color:{{ section.settings.text_1_color }}">{{ section.settings.text_1}}</h2>    
        {% endif %}
              
{% if section.settings.desc != blank %}
        <p style="color:{{ section.settings.desc_color }}">{{ section.settings.desc}}</p>    
        {% endif %}              
        {% if section.settings.button_1 != blank %}
        <a class="btn three" href="{{ section.settings.link_1 }}" style="color:{{ section.settings.button_1_txt_color }};border:none;background-color:{{ section.settings.button_1_bg_color }};">{{ section.settings.button_1}}</a>    
        {% endif %}         
      </div>
            {% else %}

           <img src="//via.placeholder.com/1000x300">
            {% endif%}           
            {% if section.settings.link_3 != blank %}  </a>

            {% endif%}
            
          </div>
        </div>

        <div class="middle-bottom">    
          <div class="grid__item wide--two-thirds post-large--two-thirds large--two-thirds medium-down--grid__item small--grid__item small--text-center">
          <div class="ovrly31 overlay_4">
            {% if section.settings.link_4 != blank %}<a class="banner_half_img" href="{{ section.settings.link_4 }}">{% endif%}
            {% if section.settings.image_4 != blank %}
            <img src="{{ section.settings.image_4 | img_url: '1000x' }}" alt="{{ section.settings.title_4 }}" />
            <div class="ovrly"></div>
            <div class="featured-content">     
        {% if section.settings.offer != blank or section.settings.offer_text != blank  %}
        <div class="offer_text">{{ section.settings.offer }}<p><span>{{ section.settings.offer_text }}</span></p></div>
        {% endif %} 
        {% if section.settings.title_4 != blank %}
        <h6 style="color:{{ section.settings.title_2_color }}">{{ section.settings.title_4 }}</h6>
        {% endif %}
        {% if section.settings.text_2 != blank %}
        <h2 style="color:{{ section.settings.text_2_color }}">{{ section.settings.text_2}}</h2>    
        {% endif %}  
        
        {% if section.settings.button_2 != blank %}
        <a class="btn four" href="{{ section.settings.link_2 }}" style="color:{{ section.settings.button_2_txt_color }};border:none;background-color:{{ section.settings.button_2_bg_color }};">{{ section.settings.button_2}}</a>    
        {% endif %}         
       </div>
            {% else %}

              <img src="//via.placeholder.com/800x400">
            {% endif%}           
            {% if section.settings.link_4 != blank %}  </a>

            {% endif%}
               
          </div>
          </div>
                    <div class="grid__item wide--one-third post-large--one-third large--one-third medium-down--grid__item small--grid__item small--text-center">

                <div class="ovrly31 overlay_2">
          {% if section.settings.link_2 != blank %}<a class="banner_half_img" href="{{ section.settings.link_2 }}">{% endif%}
          {% if section.settings.image_2 != blank %}
          <img src="{{ section.settings.image_2 | img_url: '1000x' }}" alt="{{ section.settings.title_2 }}" />
          <div class="ovrly"></div>
          {% else %}

         <img src="//via.placeholder.com/800x855">
          {% endif%}           
          {% if section.settings.link_2 != blank %}  </a>

          {% endif%}
          
        </div>
          </div>
        </div>
      

  
      </div>      
     
    </div>   
  </div>
</div>
<style>
  
  .grid-banner-type-10 .featured-content .btn.three:hover { background:{{ section.settings.button_1_hover_bg_color }} !important;color:{{ section.settings.button_1_hover_txt_color }} !important; }
  .grid-banner-type-10 .featured-content .btn.four:hover { background:{{ section.settings.button_2_hover_bg_color }} !important;color:{{ section.settings.button_2_hover_txt_color }} !important; }
  .grid-banner-type-10 .featured-content h2 span { color:{{ section.settings.hot_text }}; }
  .grid-banner-type-10 .featured-content .offer_text { color:{{ section.settings.offer_text_clr }}; }
  .grid-banner-type-10 .featured-content p span:before,.grid-banner-type-10 .featured-content p span:after { background:{{ section.settings.offer_text_clr }}; }
  
  
  
  
   {% if section.settings.overlay1 %}.grid-banner-type-10 .ovrly31.overlay_1 .ovrly { background:{{ section.settings.overlay_1 | color_modify: 'alpha', 0.7 }};  }{% endif %}
  {% if section.settings.overlay2 %}.grid-banner-type-10 .ovrly31.overlay_2 .ovrly { background:{{ section.settings.overlay_2 | color_modify: 'alpha', 0.7 }};  }{% endif %}
  {% if section.settings.overlay3 %} .grid-banner-type-10 .ovrly31.overlay_3 .ovrly { background:{{ section.settings.overlay_3 | color_modify: 'alpha', 0.7 }};  }{% endif %}
  {% if section.settings.overlay4 %}.grid-banner-type-10 .ovrly31.overlay_4 .ovrly { background:{{ section.settings.overlay_4 | color_modify: 'alpha', 0.7 }};  }{% endif %}

</style>
<div class="dt-sc-hr-invisible-large"></div>

