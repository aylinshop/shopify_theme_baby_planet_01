{
  "name": "Custom Text",
  "class": "index-section",
  "max_blocks":5,
  "settings": [


],
  "blocks": [
    {
      "type": "text",
      "name": "Content block",
      "settings": [ 
 		 {
          "type": "text",
          "id": "class",
          "label": "Font Awesoem class",
          "default": "fa fa-plus"   
        },
		{
          "type": "color",
          "id": "class_color",
          "label": "Icon color",
		  "default":"#000"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Heading"          
        },
		{
          "type": "color",
          "id": "title_color",
          "label": "Color",
		  "default":"#000"
        },
 		{
          "type": "text",
          "id": "desc",
          "label": "Description"          
        },
{
          "type": "color",
          "id": "desc_color",
          "label": "Color",
		  "default":"#000"
        },
		{
          "type": "text",
          "id": "link",
          "label": "Link"          
        }      
		
      ]
    }
  ],
  "presets": [
    {
     "name": "Custom Text",
      "category": "Text",
      "blocks": [
        {
          "type": "text"
