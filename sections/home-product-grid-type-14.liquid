          {
            "value": "2",
            "label": "2"
          },
          {
            "value": "3",
            "label": "3"
          },
          {
            "value": "4",
            "label": "4"
          }
                  
        ]
      }
   
  
  ],

  "presets": [
    {
     "name": "Vertical Product Grid",
      "category": "Collection"
    }
  ]
}
