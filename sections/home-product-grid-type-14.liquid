<div data-section-id="{{ section.id }}"  data-section-type="home-product-grid-type-14" class="home-product-grid-type-14">
  {%- assign collection = collections[section.settings.collection] -%}
  {%- assign limit = section.settings.grid | times: section.settings.rows -%}  
  <div class="full_width_tab" style="float:left;width:100%;{% if section.settings.image_bg != blank %} background-image:url('{{ section.settings.image_bg | img_url: 'master' }}');background-repeat:no-repeat;background-position:left top; {% endif %} background-color:{{ section.settings.bg_color }};">      
    <div class="container">
    {% if section.settings.main_title != blank or section.settings.description_1 != blank    %}
        <div class="section-header section-header--small">
          <div class="border-title wow fadeInDown animated">            
            <h2 style="color:{{ section.settings.main_title_clr }};">{{ section.settings.main_title }}</h2>      
            {% if section.settings.description_1 != blank %} <h5 class="small-title" style="color:{{ section.settings.desc_color }}">{{ section.settings.description_1 }}</h5>{% endif %}        
          </div>

        </div>              
        {% endif %}     
    {% case section.settings.grid %}
    {% when '2' %}
    {%- assign grid_item_width = 'wide--one-half post-large--one-half large--one-half medium--one-half small-grid__item' -%}
    {% when '3' %}
    {%- assign grid_item_width = 'wide--one-third post-large--one-half large--one-half medium--one-half small-grid__item' -%}
    {% when '4' %}
    {%- assign grid_item_width = 'wide--one-quarter post-large--one-half large--one-half medium--one-half small-grid__item' -%}
    {% when '5' %}
    {%- assign grid_item_width = 'wide--one-fifth post-large--one-fifth large--one-half medium--one-half small-grid__item' -%}            
    {% endcase %}

    <div class="grid-uniform">


      <div class="grid__item large--one-whole medium--grid__item">              
        <ul class="type4__items">
          {% for product in collection.products limit:limit  %}
          {% include 'vertical-grid-item-style-2', grid_item_width:grid_item_width %}          
          {% endfor %}
        </ul>      
      </div>
      
    </div>
  </div>
  <div class="dt-sc-hr-invisible-small"></div> 
</div>  
  </div>




<style>
    {% if section.settings.heading_image_need %}  .home-product-grid-type-14 .border-title:before {  content:"";background-image:url({{ section.settings.heading_image | img_url: 'medium' }});display:inline-block;background-repeat:no-repeat;background-position:center;width:69px;height:62px;} {% endif %}
</style>



 
  
{% schema %}
{
  "name": "Vertical Product Grid",
  "class": "index-section",  
  "settings": [ 



{
"type": "color",
"id": "bg_color",
"label": "Bg color",
"default": "#fff"
},

{
"type": "image_picker",
"id": "image_bg",
"label": "Image",      
"info": "Size: 1920x1770"
},


	{
"type": "text",
"id": "main_title",
"label": "Heading",
"default": "New arrivals"
